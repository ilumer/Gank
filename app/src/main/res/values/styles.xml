<resources>

    <!-- Base application theme. -->
    <style name="Base.Gank.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Custom.Tablaout.Theme" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Type.TextView.style" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="desc.TextView.style" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF686262</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="refer.TextView.style" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF686262</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
