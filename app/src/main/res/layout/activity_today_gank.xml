<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_today_gank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fast.ilumer.gank.activity.TodayGankActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"/>
    </android.support.design.widget.AppBarLayout>

        <com.fast.ilumer.gank.widget.RatioImageView
            android:id="@+id/gril"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/gril"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <!--针对buttom_sheet_behavior选择wrap_content-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gril"
        app:behavior_hideable="false"
        app:behavior_peekHeight="300dp"
        app:layout_behavior="@string/bottom_sheet_behavior" />

</android.support.design.widget.CoordinatorLayout>
